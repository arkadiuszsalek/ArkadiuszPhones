

<div class="w3-card-4 w3-margin w3-light-grey">

    <div class="w3-container">
      <div style="padding:10px" class="w3-row">
        <div  class="w3-col m8 s12">

            <p id="notice"><%= notice %></p>
            
            <p>
              <strong>Brand:</strong>
              <%= @phone.brand %>
            </p>
            
            <p>
              <strong>Model:</strong>
              <%= @phone.model %>
            </p>
            
            <p>
              <strong>Price:</strong>
              <%= @phone.price %>
            </p>
            
            <p>
              <strong>Description:</strong>
              <%= @phone.description %>
            </p>
            
            <%= link_to 'Edit', edit_phone_path(@phone), :class => "w3-button w3-padding-large w3-blue-grey w3-border", :role => "button" %> 
            <%= link_to 'Back', phones_path, :class => "w3-button w3-padding-large w3-blue-grey w3-border", :role => "button"  %>
            
        
         </div>
      </div>
    </div>
</div>
